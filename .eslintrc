{
  "env": {
    "browser": true,
    "es6": true,
    "node": true,
    "jest": true
  },
  "extends": "airbnb",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "sourceType": "module"
  },
  "plugins": [
    "react"
  ],
  "globals": {
    "google": true,
    "ga": true
  },
  "rules": {
    "quotes": ["error", "double"],
    "semi": ["error", "never"],
    "linebreak-style": "off",
    "comma-dangle": ["warn", "never"],
    "arrow-body-style": "off",
    "no-underscore-dangle": "off",
    "jsx-a11y/label-has-for":[ "error", {
      "required": {
        "every": [ "id" ]
      }
    }],
    "object-curly-newline": "off",
    "function-paren-newline": "off"
  }
}
